{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "2.0.0",
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run app",
            "type": "shell",
            "command": "./main.x",
            "args": [],
            "group": "none"
        },
        {
            "label": "clean app",
            "type": "shell",
            "command": "make clean",
            "group": "none"
        }
    ]
}